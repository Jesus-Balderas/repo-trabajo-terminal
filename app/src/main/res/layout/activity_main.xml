<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".activities.MainActivity"
    tools:openDrawer="start"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite">
        <include
            layout="@layout/toolbar"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/icon_labscom" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bienvenido"
                android:textSize="40sp"
                android:textStyle="bold"
                android:textColor="#009efd"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:text="Elige tu rol"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/btnAlumno"
                android:layout_width="250dp"
                android:layout_height="70dp"
                android:layout_margin="25dp"
                android:background="@drawable/custom_button_login"
                android:text="ALUMNO"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:drawableLeft="@drawable/icon_profile_student"
                android:drawableStart="@drawable/icon_profile_student" />
            <Button
                android:id="@+id/btnEncargado"
                android:layout_width="250dp"
                android:layout_height="70dp"
                android:layout_margin="25dp"
                android:background="@drawable/custom_button_login"
                android:text="ENCARGADO"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:drawableLeft="@drawable/icon_profile_encargado"
                android:drawableStart="@drawable/icon_profile_encargado" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.drawerlayout.widget.DrawerLayout>


