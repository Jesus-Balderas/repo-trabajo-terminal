<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cvAttendantReservationHistory"
    android:animateLayoutChanges="true"
    app:cardElevation="4dp"
    app:cardCornerRadius="3dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="6dp"
            tools:ignore="UselessParent">

            <ImageView
                android:id="@+id/iconImageViewReservation"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:contentDescription="imageReservation"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:src="@drawable/ic_reservation_mail"
                android:tint="@color/colorPrimary" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/iconImageViewReservation"
                android:layout_toRightOf="@+id/iconImageViewReservation"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvAttendantReservationHistory1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp"
                    tools:text="Reservación No.1" />

                <TextView
                    android:id="@+id/tvAttendantReservationHistory2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    tools:text="Alumno: Alumno Test"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/tvAttendantReservationHistory3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp"
                    tools:text="Boleta: 123456789"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/tvAttendantReservationHistory4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:layout_gravity="center"
                    tools:text="Para el día : 2022-04-11" />
                <TextView
                    android:id="@+id/tvAttendantReservationHistory5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:layout_gravity="center"
                    tools:text="A las : 13:30:00" />

                <TextView
                    android:id="@+id/tvAttendantReservationHistory6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/colorBlack"
                    tools:text="Reservada" />

                <TextView
                    android:id="@+id/tvAttendantReservationHistory7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:layout_gravity="center"
                    tools:text="No. de PC: 1" />

                <TextView
                    android:id="@+id/tvAttendantReservationHistory8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    tools:text="Fecha de Creación: 2022-04-11" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>