<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.prototipo2tt">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".app.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_app_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Prototipo2tt"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">

        <activity
            android:name=".activities.alumno.LoginAlumnoActivity"
            android:exported="false"
            android:launchMode="singleInstance"
            android:parentActivityName=".activities.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.alumno.RegistrarAlumnoActivity"
            android:launchMode="singleInstance"
            android:parentActivityName=".activities.alumno.LoginAlumnoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.alumno.HomeAlumnoActivity"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.alumno.CreateReservationActivity"
            android:exported="false"
            android:parentActivityName=".activities.alumno.HomeAlumnoActivity" />
        <activity
            android:name=".activities.alumno.StudentReservationActivity"
            android:exported="false"
            android:parentActivityName=".activities.alumno.HomeAlumnoActivity"/>
        <activity
            android:name=".activities.MainActivity"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait" />
        <activity
            android:name=".splash.SplashActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.encargado.LoginEncargadoActivity"
            android:launchMode="singleInstance"
            android:parentActivityName=".activities.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.RegistrarEncargadoActivity"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.encargado.HomeEncargadoActivity"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.encargado.AttendantReservationActivity"
            android:exported="false"
            android:parentActivityName=".activities.encargado.HomeEncargadoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.alumno.DescriptionReservationActivity"
            android:exported="false"
            android:parentActivityName=".activities.encargado.AttendantReservationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ScheduleLaboratoryActivity"
            android:parentActivityName=".activities.encargado.HomeEncargadoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.encargado.GraphReservationActivity"
            android:exported="false"
            android:parentActivityName=".activities.encargado.HomeEncargadoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.encargado.CloseLaboratoryActivity"
            android:exported="false"
            android:parentActivityName=".activities.encargado.HomeEncargadoActivity"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>